# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.Application.index

GET     /stock                           controllers.Application.stock
GET     /stock/:name                     controllers.Application.productByName(name: String)

GET     /addnew                   controllers.Application.addNewProduct(name: Option[String], quantity: Option[Int])
GET     /delete                   controllers.Application.deleteProduct(name: Option[String])

GET     /addstock                   controllers.Application.addStock(name: Option[String], quantity: Option[Int])

GET     /takestock                   controllers.Application.takeStock(name: Option[String], quantity: Option[Int])





# Map static resources from the /public folder to the /assets URL path
GET /assets/*file   controllers.Assets.at(path="/public", file)
